# ðŸ§  Knowledge Base - Environment Configuration

# --- SYSTEM SETTINGS ---
LOG_LEVEL=info
DATABASE_PATH=./.system/bookmarks.db
KNOWLEDGE_BASE_PATH=./knowledge

# --- TELEGRAM BOT ---
ENABLE_TELEGRAM_BOT=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Comma-separated list of chat IDs allowed to interact with the bot
TELEGRAM_ALLOWED_CHAT_IDS=12345678

# --- OLLAMA SETTINGS ---
OLLAMA_HOST=http://localhost:11434
# Primary model for triage and processing (multimodal 'llama3.2-vision:latest' or 'qwen2.5:14b')
OLLAMA_MODEL=llama3.2-vision:latest
# Model for generating semantic embeddings
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120000

# --- GIT INTEGRATION ---
GIT_AUTO_COMMIT=true
GIT_COMMIT_BATCH_SIZE=10

# --- PROCESSING ---
MAX_RETRIES=3
PROCESSING_BATCH_SIZE=10
# Cron schedule for nightly processing (0 0 * * * = midnight every day)
NIGHTLY_SCHEDULE="0 0 * * *"
