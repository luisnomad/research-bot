{
  "name": "knowledge-base",
  "version": "0.1.0",
  "description": "Automated pipeline that turns bookmarked content into a queryable knowledge base using local LLMs",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "bot": "tsx src/bot/index.ts",
    "onboard": "tsx src/cli/onboard.ts",
    "import:x": "tsx src/cli/import-x.ts",
    "triage:test": "tsx src/cli/test-triage.ts",
    "triage:batch": "tsx src/cli/triage-batch.ts",
    "generate:markdown": "tsx src/cli/generate-markdown.ts",
    "nightly": "tsx src/cli/run-nightly.ts",
    "process:item": "tsx src/cli/process-on-demand.ts item",
    "process:topic": "tsx src/cli/process-on-demand.ts topic",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "knowledge-base",
    "ollama",
    "telegram-bot"
  ],
  "author": "Luis",
  "license": "MIT",
  "dependencies": {
    "@extractus/article-extractor": "^8.0.11",
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/menu": "^1.2.2",
    "better-sqlite3": "^12.6.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "grammy": "^1.32.0",
    "gray-matter": "^4.0.3",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.13",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "simple-git": "^3.27.0",
    "turndown": "^7.2.0",
    "unified": "^11.0.5",
    "ws": "^8.19.0",
    "yaml": "^2.4.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/node-cron": "^3.0.11",
    "@types/turndown": "^5.0.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-functional": "^7.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}